<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>items</key>
    <array>
        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>label</key>
            <string>Animations</string>
        </dict>
        <!-- enable animations -->
        <dict>
            <key>alternateColors</key>
            <true/>
            <key>cell</key>
            <string>PSSwitchCell</string>
            <key>default</key>
            <true/>
            <key>defaults</key>
            <string>com.mattcmultimedia.stacks</string>
            <key>key</key>
            <string>showAnimations</string>
            <key>label</key>
            <string>Show Animations</string>
            <key>postNotification</key>
            <string>com.mattcmultimedia.stacks/reload</string>
        </dict>

        <!-- animationDirection -->
        <dict>
            <key>cell</key>
            <string>PSLinkListCell</string>
            <key>default</key>
            <integer>1</integer>
            <key>defaults</key>
            <string>com.mattcmultimedia.stacks</string>
            <key>detail</key>
            <string>PSListItemsController</string>
            <key>key</key>
            <string>animationDirection</string>
            <key>label</key>
            <string>Animation Direction</string>
            <key>validTitles</key>
            <array>
                <string>Up -> Down</string>
                <string>Down -> Up</string>
                <string>Left -> Right</string>
                <string>Right -> Left</string>
                </array>
            <key>validValues</key>
            <array>
                <integer>0</integer>
                <integer>1</integer>
                <integer>2</integer>
                <integer>3</integer>
            </array>
            <key>postNotification</key>
            <string>com.mattcmultimedia.stacks/reload</string>
        </dict>

        <dict>
            <key>cell</key>
            <string>PSSwitchCell</string>
            <key>default</key>
            <true/>
            <key>defaults</key>
            <string>com.mattcmultimedia.stacks</string>
            <key>key</key>
            <string>cascadeIcons</string>
            <key>label</key>
            <string>Cascade Icons</string>
            <key>postNotification</key>
            <string>com.mattcmultimedia.stacks/reload</string>
        </dict>
        <dict>
            <key>cell</key>
            <string>PSSwitchCell</string>
            <key>default</key>
            <false/>
            <key>defaults</key>
            <string>com.mattcmultimedia.stacks</string>
            <key>key</key>
            <string>invertAnimationDirection</string>
            <key>label</key>
            <string>Reverse Icon Animations</string>
            <key>postNotification</key>
            <string>com.mattcmultimedia.stacks/reload</string>
        </dict>

        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>label</key>
            <string>stack Animation Duration</string>
<!--             <key>footerText</key>
            <string>The vertical animations look best with Cascade Icons OFF and a duration around 1.0 or so. Horizontal animations look best with Cascade Icons ON and a low duration.</string> -->
        </dict>
        <dict>
            <key>cell</key>
            <string>PSSliderCell</string>
            <key>default</key>
            <real>1.0</real>
            <key>defaults</key>
            <string>com.mattcmultimedia.stacks</string>
            <key>min</key>
            <real>0</real>
            <key>max</key>
            <real>2</real>
            <key>showValue</key>
            <true/>
            <key>key</key>
            <string>stackAnimationDuration</string>
            <key>postNotification</key>
            <string>com.mattcmultimedia.stacks/reload</string>
        </dict>

        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>label</key>
            <string>stack Icon Cascade Interval</string>
            <key>footerText</key>
            <string>The vertical animations look best with Cascade Icons OFF and a duration around 0.1 or so. Horizontal animations look best with Cascade Icons ON and a low duration. Cascade Interval is up to personal preference.</string>
        </dict>
        <dict>
            <key>cell</key>
            <string>PSSliderCell</string>
            <key>default</key>
            <real>0.1</real>
            <key>defaults</key>
            <string>com.mattcmultimedia.stacks</string>
            <key>min</key>
            <real>0</real>
            <key>max</key>
            <real>0.2</real>
            <key>showValue</key>
            <true/>
            <key>key</key>
            <string>cascadeInterval</string>
            <key>postNotification</key>
            <string>com.mattcmultimedia.stacks/reload</string>
        </dict>


    </array>
    <key>title</key>
    <string>stacks Animation Settings</string>
</dict>
</plist>
