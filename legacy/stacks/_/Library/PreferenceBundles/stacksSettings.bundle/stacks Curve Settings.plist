        </dict>

        <dict>
            <key>cell</key>
            <string>PSSwitchCell</string>
            <key>alternateColors</key>
            <true/>
            <key>default</key>
            <false/>
            <key>defaults</key>
            <string>com.mattcmultimedia.stacks</string>
            <key>key</key>
            <string>curveStacks</string>
            <key>label</key>
            <string>Curve stacks</string>
            <key>postNotification</key>
            <string>com.mattcmultimedia.stacks/reload</string>
        </dict>

        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>label</key>
            <string>stacks Highlight Opacity</string>
            <key>footerText</key>
            <string>This setting only takes effect if Curve stacks is ON.</string>
        </dict>
        <dict>
            <key>cell</key>
            <string>PSSliderCell</string>
            <key>default</key>
            <real>0.7</real>
            <key>defaults</key>
            <string>com.mattcmultimedia.stacks</string>
            <key>min</key>
            <real>0</real>
            <key>max</key>
            <real>1</real>
            <key>showValue</key>
            <true/>
            <key>key</key>
            <string>highlightOpacity</string>
            <key>postNotification</key>
            <string>com.mattcmultimedia.stacks/reload</string>
        </dict>

        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>label</key>
